*{
    box-sizing: border-box;
}
body html{
    font-size: 16px;
    font-family: Verdana, Geneva, Tahoma, sans-serif;
    line-height: 1.6;
    margin: 0;
    color: rgba(0, 0, 0, .87);
    background: white;
}
.header{
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    background-color:orange;
    padding: 30px;
    z-index: 3;
    box-shadow: 0 4px 30px rgba(0, 0, 0, .09);
}

h3{
    color: white;
    text-align: center;
    padding: 0;
    margin: 10px;
    font-size: 3rem;
}
.navbar{
    float: left;
    margin-top: 40px;
}
.header .social-link{
    float: right;
}
.header .navbar a{
    color: #9f9f9f;
    text-decoration: none;
    font-weight: 500;
    padding: 0 50px;
}
.header .navbar a:hover, .header .navbar a.active {
    color: white;
    text-decoration: underline;
}

.social-link a{
    padding: 0 12px;
    opacity: .5;
    font-size: 1.5rem;
}
.social-link a:hover{
    opacity: 1;
    color: white;
}
.header .social-link span{
	display: inline;
	width: 20px;
	height: 20px;
	background-color: red;
	justify-content: center;
	align-items: center;
	color: white;
	border-radius: 30%;
	position: absolute;
	top: 60%;
	margin-right: 20px;
}
#cart-icon{
	color: white;
	font-size: 40px;
	cursor: pointer;
}
.cart{
	position:fixed;
	top:0;
	right:-100%;
	width:360px;
	min-height:100vh;
	padding:20px;
	background-color:transparent;
	backdrop-filter: blur(7px);
	box-shadow:-2px 0 4px hsl(0 4% 15% / 10%);
	transition:0.3s;
}
.cart.active{
	right:0;
}
.cart-title{
	text-align:center;
	font-size:1.5rem;
	font-weight:600;
	margin-top:2rem;
}
.cart-box{
	display:grid;
	grid-template-columns:32% 50% 18%;
	align-items:center;
	gap:1rem;
	margin-top:1rem;
}
.cart-img{
	width:100px;
	height:100px;
	object-fit:contain;
	padding:10px;
}
.detail-box{
	display:grid;
	row-gap:0.5rem;
}
.cart-product-title{
	font-size:1.3rem;
	text-transform:uppercase;
}
.cart-price{
	font-weight:500;
}
.cart-quantity{
	border:1px solid black;
	outline-color:red;
	width:2.4rem;
	text-align:center;
	font-size:1rem;
}
.cart-remove{
	font-size:24px;
	color:red;
	cursor:pointer;
}
.total{
	display:flex;
	justify-content:flex-end;
	margin-top:1.5rem;
	border-top:1px solid black;
}
.total-title{
	font-size:1rem;
	font-weight:600;
}
.total-price{
	margin-left:0.5rem;
}
.btn-buy{
	display:flex;
	margin:1.5rem auto 0 auto;
    padding:12px 20px;
    border:none;
	background:red;
	color:white;
	font-size:1rem;
	font-weight:500;
	cursor:pointer;
}
.btn-buy:hover{
	background:black;
}
#close-cart{
	position:absolute;
	top:1rem;
	right:0.8rem;
	font-size:2rem;
	color:black;
	cursor:pointer;
}
.banniere{
   height: 400px;
   background:no-repeat center center / cover url("téléchargement\ \(2\).jpeg");
}

.main{
    position: relative;
    /*top: 50px;*/
    background: #FFF;
    float: left;
    width: calc(100% - 375px);
    box-shadow: 0 4px 30px rgba(0, 0, 0, .05);
    z-index: 2;
    clear: both;
}
.article{
    position: relative;
    overflow: hidden;
    margin: 40px 0;
    padding-left: 333px;
    min-height:195px ;
}
.article img{
    position: absolute;
    left: 0;
    top: 0;
    width: 300px;
    float: left;
    height: 200px;
    margin-right: 25px;
}
.art-img{
    width: 100%;
    height: auto;
}
.art-date{
    font-weight: 300px;
    color: rgba(0, 0, 0, .20);
    margin-bottom: 5px;
}
.art-title{
    font-size:  1.5rem;
    line-height: 1.1;
    font-family: "cardo", serif;
    margin: 0 0 15px 0;
}
.article a{
    color: inherit;
    text-decoration: none;
}
.article a:hover{
    text-decoration: underline;
}
.smaleblog{
   /* top: 195px;*/
    position: relative;
    background: #fbfbfb;
    width: 375px;
    float: right;
    padding: 40px;
    font-size: 17px;
    z-index: 1;
}
.smaleblog-title{
    font-size: 25px;
    margin-bottom: 35px 0;
    margin-top: 20px;
}
.smaleblog-title:first-child{
    margin-top: 0;
}
.smaleblog ul li:hover .dropdown_menu 1{
	display: block;
	position: absolute;
	left: 150PX;
	top: 10.9%;
	background-color: black;
	padding: 0px 20px;
	
}
.dropdown_menu{
	display: none;
}
.dropdown_menu ul{
	display: block;
	margin: 4px;
}
.dropdown_menu ul li{
	width:250PX;
	/*dding:4px*/
}

.smaleblog a{
    color: #9f9f9f;
    text-decoration: none;
    
}
.smaleblog hr{
    border: none;
    background: #c4c4c4;
    height: 1px;
    margin: 50px 0;
}
.smaleblog ul{
    margin: 0;
    padding: 0;
    list-style: none;
    line-height: 2.3;
    
}
.smaleblog a:hover{
    text-decoration: underline;
}
.footer{
    clear: both;
    background: rgba(0, 0, 0, .09);
    text-align: center;
    align-items: center;
    justify-content: center;
    color: white;
}
